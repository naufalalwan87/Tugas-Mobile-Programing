<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"

            android:ems="10"
            android:id="@+id/bil1"
            android:layout_marginTop="104dp"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.968"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"

            android:ems="10"
            android:id="@+id/bil2" android:layout_marginTop="92dp"
            app:layout_constraintTop_toBottomOf="@+id/bil1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.968"/>
    <TextView
            android:text="Hello Word"
            android:textAlignment="center"
            android:layout_width="144dp"
            android:layout_height="111dp"
            android:id="@+id/hasil"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/bil2"/>
    <Button
            android:text="Tambah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tambahkan" android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/bil2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/kalikan"/>
    <Button
            android:text="Kurang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kurangkan" android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/bil2" app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.986"/>
    <Button
            android:text="Kali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kalikan" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/kurangkan" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/bagikan"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.116"/>
    <Button
            android:text="Bagi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bagikan" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/tambahkan" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.34"/>
</androidx.constraintlayout.widget.ConstraintLayout>